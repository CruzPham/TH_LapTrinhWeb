@using PagedList
@using PagedList.Mvc
@model IPagedList<PhamVanTung.SachOnline.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/PhamVanTung.Layout.cshtml";
}

<h2 class="text-center">SACH MOI</h2>
<hr />

@if (ViewBag.ThongBao != null)
{
    <p class="text-danger text-center">@ViewBag.ThongBao</p>
}

<div class="row text-center">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
                <div class="thumbnail">
                    <a href="@Url.Action("ChiTietSach", "PhamVanTungSachOnline", new { id = item.MaSach })">
                        <img src="@Url.Content("~/Images/" + item.AnhBia)"
                             alt="@item.TenSach"
                             class="img-responsive img-rounded imgbook" />
                    </a>
                    <div class="caption">
                        <h3>
                            <a href="@Url.Action("ChiTietSach", "PhamVanTungSachOnline", new { id = item.MaSach })">
                                @item.TenSach
                            </a>
                        </h3>
                        <p>@item.MoTa</p>
                        <p>
                            <a href="@Url.Action("ThemGioHang", "PhamVanTung_GioHang", new { iMaSach = item.MaSach, strURL = Request.RawUrl })" class="btn btn-warning" role="button">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-xs-12">
            <div class="alert alert-info text-center">Khong co sach moi.</div>
        </div>
    }
</div>

@if (Model != null && Model.PageCount > 1)
{
    <div class="text-center" style="margin-top:10px;">
        Trang @Model.PageNumber/@Model.PageCount
    </div>
    <div class="text-center">
        @Html.PagedListPager(
            Model,
            page => Url.Action("Index", new { page }),
            new PagedListRenderOptions
            {
                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                MaximumPageNumbersToDisplay = 5,
                UlElementClasses = new[] { "pagination" }
            })
    </div>
}

@section SachBanNhieu {
    @Html.Partial("SachBanNhieuPartial")
}
