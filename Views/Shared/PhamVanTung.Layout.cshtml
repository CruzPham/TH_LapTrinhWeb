@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>Pham Van Tung</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap&subset=vietnamese" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/PagedList.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
        body {
            padding-top: 0;
        }
        .container.body-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        h2.section-title {
            font-size: 28px;
            text-align: center;
            font-weight: 700;
            margin-top: 10px;
            margin-bottom: 18px;
        }
        .dropdown-menu .btn-link {
            color: #333;
            width: 100%;
            text-align: left;
            padding: 3px 20px;
        }
        .logout-form {
            display: inline-block;
            margin: 0;
            padding: 0;
        }
        .logout-form button {
            color: #fff;
            padding: 10px 15px;
        }
        @@media (max-width:768px) {
            .imgbook {
                width: 100%;
                height: auto;
            }
        }
    </style>

</head>
<body>

    <nav class="navbar navbar-inverse">

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PhamVanTungSachOnline", "Index", "PhamVanTungSachOnline", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar1">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("TRANG CHỦ", "Index", "PhamVanTungSachOnline")</li>
                    <li>@Html.ActionLink("GIỚI THIỆU", "About", "PhamVanTungSachOnline")</li>
                    <li>@Html.ActionLink("LIÊN HỆ", "Contact", "PhamVanTungSachOnline")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Admin", "Login", "Home", null, new { @class = "" })</li>
                    @Html.Action("LoginLogoutPartial", "User")
                    @Html.Action("GioHangPartial", "PhamVanTung_GioHang")
                </ul>

                <form class="navbar-form navbar-right" role="search" action="@Url.Action("Index","PhamVanTungSachOnline")" method="get">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tim kiem" name="q">
                    </div>
                    <button type="submit" class="btn btn-default">Tim</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="row">
            <div class="col-xs-12">
                @Html.Action("SliderPartial", "PhamVanTungSachOnline")
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "PhamVanTungSachOnline")
                @Html.Action("NhaXuatBanPartial", "PhamVanTungSachOnline")
            </div>

            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
                @RenderSection("SachBanNhieu", required: false)
            </div>
        </div>

        <hr />
        <footer class="container well text-center">
            <p>Phạm Văn Tùng - 2324801030079 - D23KTPM01</p>
            <p>Website được phát triển để sử dụng làm bài tập thực hành môn Lập trình Web</p>
            <p>Email: phamvantung.cr25@gmail.com</p>
        </footer>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>





