@model IEnumerable<PhamVanTung.SachOnline.Models.SACH>
@{
    ViewBag.Title = "Quản lý Sách";
    Layout = "~/Areas/PhamVanTung_Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="admin-title">QUẢN LÝ SÁCH</h2>

<table class="table table-bordered table-hover text-center">
    <thead class="info">
        <tr>
            <th>Mã Sách</th>
            <th>Tên Sách</th>
            <th>Giá Bán</th>
            <th>Số Lượng Bán</th>
            <th>Ảnh Bìa</th>
            <th>Ngày Cập Nhật</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSach</td>
                <td>@item.TenSach</td>
                <td>@string.Format("{0:N0} ₫", item.GiaBan)</td>
                <td>@item.SoLuongBan</td>
                <td>
                    <img src="~/Images/@item.AnhBia" alt="@item.TenSach" style="height:80px;width:auto" />
                </td>
                <td>@item.NgayCapNhat?.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
