@{
    Layout = null;
    ViewBag.Title = "Đăng nhập Admin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Dùng CSS Bootstrap sẵn có -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
        }

        .login-box {
            max-width: 400px;
            margin: 100px auto;
            padding: 25px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
        }

            .login-box h3 {
                text-align: center;
                margin-bottom: 25px;
                color: #337ab7;
            }

        .btn-primary {
            width: 100%;
        }

        .alert-danger {
            padding: 10px;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <div class="login-box">
        <h3>ĐĂNG NHẬP ADMIN</h3>

        @if (!string.IsNullOrEmpty(ViewBag.ThongBao as string))
        {
            <div class="alert alert-danger text-center">
                @ViewBag.ThongBao
            </div>
        }

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { area = "PhamVanTung_Admin" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="UserName">Tên đăng nhập</label>
                <input type="text" name="UserName" class="form-control" required placeholder="Nhập tên đăng nhập" />
            </div>

            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                <input type="password" name="Password" class="form-control" required placeholder="Nhập mật khẩu" />
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" /> Nhớ đăng nhập
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        }
    </div>
</body>
</html>

