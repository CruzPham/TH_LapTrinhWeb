@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>Phạm Văn Tùng</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
        body {
            padding-top: 0;
        }
        .container.body-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        h2.section-title {
            font-size: 28px;
            text-align: center;
            font-weight: 700;
            margin-top: 10px;
            margin-bottom: 18px;
        }
        .dropdown-menu .btn-link {
            color: #333;
            width: 100%;
            text-align: left;
            padding: 3px 20px;
        }
        @@media (max-width:768px) {
            .imgbook {
                width: 100%;
                height: auto;
            }
        }
    </style>

</head>
<body>

    <nav class="navbar navbar-inverse">

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PhamVanTungSachOnline", "Index", "PhamVanTungSachOnline", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar1">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("TRANG CHỦ", "Index", "PhamVanTungSachOnline")</li>
                    <li>@Html.ActionLink("GIỚI THIỆU", "About", "PhamVanTungSachOnline")</li>
                    <li>@Html.ActionLink("LIÊN HỆ", "Contact", "PhamVanTungSachOnline")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">
                                Xin chao, @User.Identity.Name <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @using (Html.BeginForm("DangXuat", "User", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link btn-block text-left">
                                            <span class="glyphicon glyphicon-log-out"></span> Dang xuat
                                        </button>
                                    }
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Nguoi dung<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("DangKy", "User")">
                                        <span class="glyphicon glyphicon-user"></span> Dang ky
                                    </a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a href="@Url.Action("DangNhap", "User")">
                                        <span class="glyphicon glyphicon-log-in"></span> Dang nhap
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    <li>@Html.ActionLink("Gio hang", "GioHang", "PhamVanTung_GioHang", null, new { @class = "" })</li>
                </ul>

                <form class="navbar-form navbar-right" role="search" action="@Url.Action("Index","PhamVanTungSachOnline")" method="get">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm" name="q">
                    </div>
                    <button type="submit" class="btn btn-default">Tìm</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="row">
            <div class="col-xs-12">
                @Html.Action("SliderPartial", "PhamVanTungSachOnline")
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "PhamVanTungSachOnline")
                @Html.Action("NhaXuatBanPartial", "PhamVanTungSachOnline")
            </div>

            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
                @RenderSection("SachBanNhieu", required: false)
            </div>
        </div>

        <hr />
        <footer class="container well text-center">
            <p>Phạm Văn Tùng - 2324801030079 - D23KTPM01</p>
            <p>Website được phát triển để sử dụng làm bài tập thực hành môn Lập trình Web</p>
            <p>Email: phamvantung.cr25@gmail.com</p>
        </footer>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
